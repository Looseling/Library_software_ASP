<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">   
            <h2 class="text-primary">List Company</h2>
        </div>
        <div class="col-6">   
            <a   asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                &nbsp; Create New Company
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="tblData"  style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>StreetAddress</th>
                <th>State</th>
                <th>City</th>
                <th>PhoneNumber</th> 
                <th></th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}
