@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">   
            <h2 class="text-primary">List CoverType</h2>
        </div>
        <div class="col-6">   
            <a   asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                &nbsp; Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {   
               <tr>
                   <td width="50%">
                       @obj.Name
                   </td>

                   <td>
                       <a class="btn btn-primary" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i> Edit</a>
                   </td>
                    <td>
                       <a class="btn btn-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i> Delete</a>
                   </td>
               </tr>
            }
        </tbody>
    </table>

</div>
