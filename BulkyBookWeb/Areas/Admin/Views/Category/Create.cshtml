@model Category
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div classs="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
        <div classs="mb-3">
            <label asp-for="DiaplyOrder"></label>
            <input asp-for="DiaplyOrder" class="form-control" />
            @*<span asp-validation-for="DiaplyOrder" class="text-danger"></span>*@
        </div>
            <hr />

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" style="width:150px" class="btn btn-secondary">Back To List</a>



    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" ></partial>
    }
}